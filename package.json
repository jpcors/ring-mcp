{
	"name": "ring-mcp-server",
	"version": "1.0.0",
	"description": "MCP server for Ring home security devices",
	"main": "build/index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"start": "node build/index.js",
		"auth": "npx -p ring-client-api ring-auth-cli",
		"help": "node build/index.js --help",
		"test": "jest",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"format": "biome format . --write"
	},
	"keywords": [
		"mcp",
		"ring",
		"home-automation",
		"security"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^0.5.0",
		"dotenv": "^17.2.0",
		"ring-client-api": "^11.7.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@jest/types": "^29.0.0",
		"@types/jest": "^29.0.0",
		"@types/node": "^20.0.0",
		"@types/ws": "^8.18.1",
		"jest": "^29.0.0",
		"ts-jest": "^29.0.0",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.0.0"
	}
}
